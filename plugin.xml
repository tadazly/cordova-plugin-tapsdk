<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-plugin-tapsdk" version="1.0.0">
    <name>TapSDKCordovaPlugin</name>
    <description>TapSDK Cordova Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,taptap,tapsdk,sdk</keywords>
    <repo>https://github.com/tadazly/cordova-plugin-tapsdk.git</repo>

    <preference name="TAP_CLIENT_ID" />
    <preference name="TAP_CLIENT_TOKEN" />

    <js-module src="www/TapSDK.js" name="TapSDK">
        <clobbers target="TapSDK" />
        <clobbers target="cordova.plugins.TapSDK" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="TapSDK">
                <param name="android-package" value="com.tadazly.tapsdk.TapSDKCordovaPlugin" />
            </feature>
            <preference name="TAP_CLIENT_ID" value="$TAP_CLIENT_ID" />
            <preference name="TAP_CLIENT_TOKEN" value="$TAP_CLIENT_TOKEN" />
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
            <queries>
                <package android:name="com.taptap" />
                <package android:name="com.taptap.global" />
            </queries>
        </config-file>

        <source-file src="src/android/TapSDKCordovaPlugin.java" target-dir="src/com/tadazly/tapsdk" />
        <source-file src="src/android/libs/TapCommon_3.28.3.aar" target-dir="libs" />
        <source-file src="src/android/libs/TapUpdate_3.28.3.aar" target-dir="libs" />
        <framework src="src/android/tapsdk-build.gradle" custom="true" type="gradleReference" />
    </platform>
</plugin>